# App Configuration
NEXT_PUBLIC_APP_NAME=MyLoop

# Firebase Configuration (本番環境)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin (Server-side only - 本番環境)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Firebase Emulator (ローカル開発用 - APIキーを配らない運用)
# エミュレーターを使う場合は NEXT_PUBLIC_FIREBASE_USE_EMULATOR=true に設定
NEXT_PUBLIC_FIREBASE_USE_EMULATOR=false
NEXT_PUBLIC_FIREBASE_EMU_HOST=localhost
NEXT_PUBLIC_FIREBASE_EMU_FIRESTORE_PORT=8080
NEXT_PUBLIC_FIREBASE_EMU_AUTH_PORT=9099
NEXT_PUBLIC_FIREBASE_EMU_FUNCTIONS_PORT=5001

# サーバー側エミュレーター設定（Admin SDK用）
FIREBASE_USE_EMULATOR=false
FIREBASE_EMU_HOST=localhost
FIREBASE_EMU_FIRESTORE_PORT=8080
FIREBASE_EMU_AUTH_PORT=9099

# LINE Messaging API
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_ACCESS_TOKEN=your_line_access_token

# Google OAuth & Calendar
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Zoom
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret

# Google Sheets
SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# AI APIs
CLAUDE_API_KEY=sk-ant-your_claude_api_key
OPENAI_API_KEY=sk-your_openai_api_key

